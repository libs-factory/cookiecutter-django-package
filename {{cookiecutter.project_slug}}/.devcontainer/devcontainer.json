{
  "name": "{{cookiecutter.project_name}}",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "zsh",
        "python.defaultInterpreterPath": "/home/vscode/.pyenv/shims/python"
      }
    }
  },
  "features": {
    "ghcr.io/infras-factory/devcontainer-features/riso-bootstrap:1.1.1": {
      "shellEnhancementLevel": "poweruser"
    }
  },
  "postCreateCommand": "/bin/bash .devcontainer/scripts/post-create.sh"
}
